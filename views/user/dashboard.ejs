<h1 class="mt-4">Dashboard</h1>
<%- include ../partials/messages %>
<div class="row">
    <div class="col-sm-6">
        <div class="card">
            <div class="card-header">User Profile</div>
            <div class="card-body">
                <table class="table table-borderless">
                    <tr>
                        <td>Name:</td>
                        <td><%= user.name %></td>
                    </tr>
                    <tr>
                        <td>Email:</td>
                        <td><%= user.email %></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="card">
            <div class="card-header">My Petitions</div>
            <ul class="list-group list-group-flush">
                <% petitions.forEach(function(petition){ %>
                    <li class="list-group-item">
                        <%- petition.title %>
                        <div class="btn-group float-right">
                            <a href="/petition/view/<%- petition._id %>" class="btn btn-primary btn-sm" role="button" aria-pressed="true">View</a>
                            <a href="/petition/delete/<%- petition._id %>" class="btn btn-danger btn-sm" role="button" aria-pressed="true">Delete</a>
                        </div>
                    </li>
                <% }); %>
            </ul>
            <div class="card-footer text-right">
                <a type="button" class="btn btn-success btn-sm" href="/petition/add">Add Petition</a>
            </div>
        </div>
    </div>
</div>
