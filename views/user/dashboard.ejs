<h1 class="mt-4">Dashboard</h1>
<%- include ../partials/messages %>
<div class="row">
    <div class="col-sm-6">
        <div class="card">
            <div class="card-header">User Profile</div>
            <div class="card-body">
                <table class="table table-borderless">
                    <tr>
                        <td>Name:</td>
                        <td><%= user.name %></td>
                    </tr>
                    <tr>
                        <td>Email:</td>
                        <td><%= user.email %></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="card">
            <div class="card-header">My Petitions</div>
            <div class="card-body">
                <div class="list-group">
                    <% petitions.forEach(function(petition){ %>
                        <a href="#" class="list-group-item list-group-item-action"><%- petition.title %></a>
                    <% }); %>
                </div>
            </div>
            <div class="card-footer text-right">
                <a type="button" class="btn btn-success btn-sm" href="/petition/add">Add Petition</a></div>
        </div>
    </div>
</div>
